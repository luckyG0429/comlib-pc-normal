{
  "title": "富文本编辑器",
  "name": "mybricks.normal-pc.input-richtext", // input-richtext
  "data": {
    // 以下是富文是富文本编辑器的属性描述
    "placeholder": "string",
    "disabled": "boolean",
    "style": "CSSProperties", // 自定义样式，默认值 { "height": "200px" }
