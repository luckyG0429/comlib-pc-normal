    "toolbarOptions": "('bold' | 'italic' | 'underline' | 'strikethrough' | 'superscript' | 'subscript' | 'fontselect' | 'fontsizeselect' | 'lineheight' | 'letterspacing' | 'forecolor' | 'backcolor' | 'removeformat' | 'bullist' | 'numlist' | 'alignleft' | 'aligncenter' | 'alignright' | 'alignjustify' | 'indent' | 'outdent' | 'uploadimage' | 'uploadVideo' | 'table' | 'codesample' | 'link' | 'emoticons' | 'undo' | 'styleselect' | 'redo' | 'code' | 'fullscreen' | 'help' | 'cut' | 'copy' | 'selectall' | 'wordcount')[]" // 添加需要的插件，前置条件是开启显示编辑栏开关。默认值为 ["link"]
  }
}
