{
  "title": "动态表单项",
  "namespace": "mybricks.normal-pc.form-list",
  "author": "ZhuLin",
  "author_name": "朱琳",
  "version": "1.0.0",
  "description": "可以动态增加、删除的组合表单项，数据格式为数组",
  "icon": "./icon.svg",
  "data": "./data.json",
  "runtime": "./runtime.tsx",
  "editors": "./editors/index.ts",
  "target": {
    "toReact": "./toReact.ts"
  },
  "inputs": [
    {
      "id": "setValue",
      "title": "设置值",
      "desc": "设置表单项的值，用于校验和提交，并触发值变化事件输出",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    {
      "id": "setInitialValue",
      "title": "设置初始值",
      "desc": "设置表单项的初始值，用于校验和提交，并触发初始化事件输出",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    {
      "id": "validate",
      "title": "校验",
      "desc": "触发表单项的校验检查，并输出校验结果",
      "schema": {
        "type": "any"
      },
      "rels": [
        "returnValidate"
      ]
    },
    {
      "id": "getValue",
      "title": "获取值",
      "desc": "获取表单项的值并输出",
      "schema": {
        "type": "any"
      },
      "rels": [
        "returnValue"
      ]
    },
    {
      "id": "resetValue",
      "title": "重置值",
      "desc": "清空表单项的值",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setDisabled",
      "title": "设置禁用",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setEnabled",
      "title": "设置启用",
      "schema": {
        "type": "any"
      }
    }
  ],
  "outputs": [
    {
      "id": "onInitial",
      "title": "初始化",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    {
      "id": "onChange",
      "title": "值更新",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    {
      "id": "returnValidate",
      "title": "校验结果",
      "schema": {
        "type": "object",
        "properties": {
          "validateStatus": {
            "title": "校验状态",
            "type": "string"
          },
          "help": {
            "title": "校验提示",
            "type": "string"
          }
        }
      }
    },
    {
      "id": "returnValue",
      "title": "值输出",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    {
      "id": "onClickAdd",
      "title": "点击添加",
      "schema": {
        "type": "object",
        "properties": {
          "index": {
            "title": "当前项索引",
            "type": "number"
          },
          "key": {
            "title": "当前项标识",
            "type": "number"
          }
        }
      }
    },
    {
      "id": "onClickRemove",
      "title": "点击删除",
      "schema": {
        "type": "object",
        "properties": {
          "value": {
            "title": "当前项数据",
            "type": "object"
          },
          "index": {
            "title": "当前项索引",
            "type": "number"
          },
          "key": {
            "title": "当前项标识",
            "type": "number"
          }
        }
      }
    }
  ],
  "slots": [
    {
      "id": "formItems",
      "title": "列表项",
      "type": "scope",
      "inputs": [
        {
          "id": "curValue",
          "title": "当前项数据",
          "schema": {
            "type": "object"
          }
        },
        {
          "id": "curIndex",
          "title": "当前项索引",
          "schema": {
            "type": "number"
          }
        },
        {
          "id": "curKey",
          "title": "当前项标识",
          "schema": {
            "type": "number"
          }
        }
      ],
      "_inputs": [
        {
          "id": "validateTrigger",
          "title": "触发校验",
          "schema": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "title": "组件ID"
              }
            }
          }
        },
        {
          "id": "onChange",
          "title": "表单项值变化",
          "schema": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "title": "组件ID"
              },
              "value": {
                "type": "any",
                "title": "组件值"
              }
            }
          }
        }
      ]
    }
  ],
  "schema": [
    "mybricks.normal-pc.form-container/form-item",
    "*"
  ]
}