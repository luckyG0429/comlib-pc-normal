{
  "title": "锚点容器",
  "enable": true,
  "visibility": true,
  "namespace": "mybricks.normal-pc.anchor-container",
  "version": "1.0.1",
  "description": "锚点容器",
  "author": "Mybricks",
  "author_name": "Mybricks",
  "icon": "./icon.svg",
  "data": "./data.json",
  "runtime": "./runtime.tsx",
  "editors": "./editors.tsx",
  "inputs": [
    {
      "id": "dataSource",
      "title": "设置数据源",
      "desc": "设置列表容器数据源，数据结构要求是数组",
      "schema": {
        "title": "列表数据",
        "type": "array",
        "items": {
          "title": "列项数据",
          "type": "any"
        }
      },
      "rels": [
        "setDataSourceDone"
      ]
    }
  ],
  "outputs": [
    {
      "id": "setDataSourceDone",
      "title": "设置数据源完成",
      "schema": {
        "title": "列表数据",
        "type": "array",
        "items": {
          "title": "列项数据",
          "type": "any"
        }
      }
    }
  ],
  "slots": [
    {
      "id": "item",
      "capacity": 1,
      "title": "列表项",
      "type": "scope",
      "inputs": [
        {
          "id": "itemData",
          "title": "当前项",
          "desc": "当前项展示内容",
          "schema": {
            "type": "any"
          }
        },
        {
          "id": "index",
          "title": "当前项序号",
          "desc": "当前项展示的序号",
          "schema": {
            "type": "number"
          }
        }
      ]
    }
  ]
}