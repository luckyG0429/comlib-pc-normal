{
  "类型": [
    {
      "Q": "将类型设置为默认",
      "A": {
        "steps": {
          "type": "default"
        }
      }
    },
    {
      "Q": "将类型设置为导航类型",
      "A": {
        "steps": {
          "type": "navigation"
        }
      }
    },
    {
      "Q": "将类型设置为点状类型",
      "A": {
        "steps": {
          "type": "dotted"
        }
      }
    }
  ],
  "尺寸": [
    {
      "Q": "将尺寸设置为默认",
      "A": {
        "steps": {
          "size": "default"
        }
      }
    },
    {
      "Q": "将尺寸设置为迷你",
      "A": {
        "steps": {
          "size": "small"
        }
      }
    }
  ],
  "方向": [
    {
      "Q": "将方向设置为水平",
      "A": {
        "steps": {
          "direction": "horizontal"
        }
      }
    },
    {
      "Q": "将方向设置为竖直",
      "A": {
        "steps": {
          "direction": "vertical"
        }
      }
    }
  ],
  "描述": [
    {
      "Q": "显示描述",
      "A": {
        "steps": {
          "showDesc": true
        }
      }
    }
  ],
  "点击切换": [
    {
      "Q": "关闭点击切换",
      "A": {
        "steps": {
          "canClick": false
        }
      }
    }
  ],
  "操作栏": [
    {
      "Q": "打开操作栏",
      "A": {
        "toolbar": {
          "showActions": true
        }
      }
    }
  ],
  "按钮组": [
    {
      "Q": "将按钮组设置为上一步",
      "A": {
        "toolbar": {
          "btns": [
            "previous"
          ]
        }
      }
    },
    {
      "Q": "将按钮组设置为下一步",
      "A": {
        "toolbar": {
          "btns": [
            "next"
          ]
        }
      }
    },
    {
      "Q": "将按钮组设置为提交",
      "A": {
        "toolbar": {
          "btns": [
            "submit"
          ]
        }
      }
    }
  ]
}