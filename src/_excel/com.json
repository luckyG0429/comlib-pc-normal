{
  "title": "excel导出",
  "namespace": "mybricks.normal-pc.excel",
  "version": "1.0.7",
  "rtType": "js",
  "description": "数据导出excel",
  "author": "tangxiaoxin",
  "author_name": "唐小新",
  "data": "./data.json",
  "runtime": "./runtime.ts",
  "editors": "./editor.ts",
  "icon": "./icon.svg",
  "upgrade": "./upgrade.ts",
  "inputs": [
    {
      "id": "input",
      "title": "输入项",
      "desc": "需要导出的表数据",
      "schema": [
        {
          "name": "dataSource",
          "title": "输入数据源",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "表名称"
              },
              "header": {
                "type": "array",
                "description": "表头",
                "items": {
                  "type": "string"
                }
              },
              "columns": {
                "type": "array",
                "description": "列配置",
                "items": {
                  "type": "object",
                  "properties": {
                    "width": {
                      "type": "number",
                      "description": "列宽"
                    },
                    "hidden": {
                      "type": "boolean",
                      "description": "列是否隐藏"
                    }
                  }
                }
              },
              "data": {
                "type": "array",
                "description": "表数据",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "id": "exportComplete",
      "title": "完成",
      "desc": "生成Excel完成后, 输出",
      "schema": {
        "type": "any"
      }
    }
  ]
}
