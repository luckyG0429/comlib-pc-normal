{
  "title": "文本排版",
  "namespace": "mybricks.normal-pc.typography",
  "version": "1.0.4",
  "description": "展示文本基本格式",
  "author": "MyBricks",
  "author_name": "MyBricks",
  "icon": "./icon.svg",
  "data": "./data.json",
  "runtime": "./runtime.tsx",
  "editors": "./editors.tsx",
  "upgrade": "./upgrade.ts",
  "inputs": [
    {
      "id": "setData",
      "title": "设置数据",
      "schema": {
        "type": "object",
        "properties": {
          "textList": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "content": {
                  "title": "内容",
                  "type": "string"
                },
                "type": {
                  "title": "类型",
                  "type": "string"
                },
                "stylePadding":{
                  "type":"array",
                  "items": {
                    "type": "number"
                  }
                },
                "link": {
                  "title": "链接",
                  "type": "string"
                }
              }
            }
          },
          "style": {
            "type": "object",
              "properties": {
                "color": {
                  "type": "string"
                },
                "fontSize": {
                  "type": "string"
                },
                "fontWeight":{
                  "type": "number"
                }
              }
          } 
        }
      }
    }
  ],
  "outputs": [
    {
      "id": "click",
      "title": "单击",
      "schema": {
        "type": "object",
        "properties": {
          "content": {
            "title": "内容",
            "type": "string"
          },
          "key": {
            "title": "唯一标识",
            "type": "string"
          },
          "type": {
            "title": "类型",
            "type": "string"
          },
          "link": {
            "title": "链接",
            "type": "string"
          }
        }
      }
    }
  ]
}